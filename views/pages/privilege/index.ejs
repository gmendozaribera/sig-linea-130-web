<!DOCTYPE html>
<html>

<head>
  <% include ../../partials/header.ejs %>
  <link type="text/css" href="/css/leaflet.css" rel="stylesheet">
</head>

<body>

  <% include ../../partials/nav.ejs %>

  <br>
  <div class="container">

    <div class="row">

      <div class="col-md-12">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">Lista de Privilegios</h2>
            <hr>
            <a href="/privilege/create" class="btn btn-primary">Registrar nuevo privilegio</a>
            <hr>
            <table class="table table-bordered">
              <tr>
                <th>Nombre</th>
                <th>Descripci√≥n</th>
                <th>Acciones</th>
              </tr>
              <% privileges.forEach( (privilege) => { %>
                <tr>
                  <td><%= privilege.priv_name %></td>
                  <td><%= privilege.priv_description %></td>
                  <td>
                    <!-- Ver | Editar | Eliminar -->
                    <a href="/privilege/view/<%= privilege.privilege_id %>">Ver</a> |
                    <a href="/privilege/update/<%= privilege.privilege_id %>">Modificar</a> |
                    <a href="#">Eliminar</a>
                  </td>
                </tr>
              <% }); %>
            </table>
          </div>
        </div>
      </div>

    </div><!-- row -->

  </div> <!-- container -->
  <% include ../../partials/footer.ejs %>
</body>

</html>